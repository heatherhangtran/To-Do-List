<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.randybiglow.projectone.MainActivity"
    android:id="@+id/masterLayout"
    android:background="#d7f4e8"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Master List"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/masterTextView"
        android:background="@drawable/custom_text_view"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/masterEditText"
        android:layout_centerHorizontal="true"
        android:hint="New list"
        android:layout_below="@id/masterTextView"
        android:textColorHint="#ffffff"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edit_text"
        android:textCursorDrawable="@null"
        android:textColor="#7fc4a7"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/masterTextView"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:text="Add"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:id="@+id/masterButton"
        android:background="@drawable/custom_button"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/masterListView"
        android:layout_below="@id/masterButton"
        android:layout_marginTop="20dp">
    </ListView>

</RelativeLayout>
